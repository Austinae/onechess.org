include ./includes/head
	include ./includes/nav
	if(error)
		p Something went wrong, please verify authentication rules.
	.form-box
		h2 Sign up
		form(action='/signup', method='POST')
			.user-box
				input(name='username', type='text', required=true)
				label Username
				if(error)
					p.alert.alert-warning (4-20) characters, no confusing characters (must be UTF-8).
			.user-box
				input(name='email', type='email', required=true)
				label Email
				if(error)
					p.alert.alert-warning Please make sure this is a valid email.
			.user-box
				input(name='password', type='password', required=true)
				label Password
				if(error)
					p.alert.alert-warning (5-20) characters , at least one digit, capital letter and special character ($!^*/).
			button(type='submit') Submit
				span
				span
				span
				span
			p.mt-3.mb-0 Already have an account? 
			a#ref(href='/login') Log in here

